<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.inrmeter.activity.MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/heart_inr" />

    <TextView
        android:id="@+id/inrText"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Click button to measure your inr value"
        android:textSize="16dp" />

    <Button
        android:id="@+id/measurebutton"
        style="@style/ButtonINRMeterTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inrText"
        android:layout_centerHorizontal="true"
        android:text="Measure INR Value"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/measurebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Copyright Â© 2014 Furkan Zumrut. All rights reserved"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="9dp" />

</RelativeLayout>